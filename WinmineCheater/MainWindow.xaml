<Window x:Class="WinmineCheater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinmineCheater"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        Title="Winmine cheater" Height="350" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Click="BtnStartWinmine_Click" x:Name="BtnStartWinmine" IsEnabled="False">Start winmine</Button>
            <Button IsEnabled="False" Margin="5 0 0 0" x:Name="BtnShowMines" Click="BtnShowMines_Click">Show mines distribution</Button>
        </StackPanel>
    </Grid>
</Window>
